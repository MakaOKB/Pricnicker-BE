# 环境配置示例文件
# 复制此文件为 .env 并根据实际环境修改配置

# 应用环境 (development/production)
ENVIRONMENT=development

# CORS 额外允许的源（用逗号分隔）
# 例如：CORS_EXTRA_ORIGINS=https://example.com,https://app.example.com
CORS_EXTRA_ORIGINS=

# 缓存配置
CACHE_TTL_HOURS=1

# 日志级别
LOG_LEVEL=INFO

# API 配置
API_HOST=0.0.0.0
API_PORT=8000

# 生产环境示例配置
# ENVIRONMENT=production
# CORS_EXTRA_ORIGINS=
# LOG_LEVEL=WARNING